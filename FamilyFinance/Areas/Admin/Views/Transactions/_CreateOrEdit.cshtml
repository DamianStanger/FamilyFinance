</div>

<div class="editor-label">
    Account
</div>
<div class="editor-field">
    @Html.DropDownListFor(model => model.AccountId, ((IEnumerable<Account>)ViewBag.PossibleAccounts).Select(option => new SelectListItem {
        Text = (option == null ? "None" : option.Name), 
        Value = option.Id.ToString(),
        Selected = (Model != null) && (option.Id == Model.AccountId)
    }), "Choose...")
    @Html.ValidationMessageFor(model => model.AccountId)
</div>
