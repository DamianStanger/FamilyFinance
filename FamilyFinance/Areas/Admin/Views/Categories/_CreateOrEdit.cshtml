@using FamilyFinance.Models.Domain
@model FamilyFinance.Models.Domain.Category

@* This partial view defines form fields that will appear when creating and editing entities *@

<div class="editor-label">
    @Html.LabelFor(model => model.Name)
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.Name)
    @Html.ValidationMessageFor(model => model.Name)
</div>

<div class="editor-label">
    ParentCategory
</div>
<div class="editor-field">
    @Html.DropDownListFor(model => model.ParentCategoryId, ((IEnumerable<Category>)ViewBag.PossibleParentCategories).Select(option => new SelectListItem {
        Text = (option == null ? "None" : option.Name), 
        Value = option.Id.ToString(),
        Selected = (Model != null) && (option.Id == Model.ParentCategoryId)
    }), "Choose...")
    @Html.ValidationMessageFor(model => model.ParentCategoryId)
</div>
