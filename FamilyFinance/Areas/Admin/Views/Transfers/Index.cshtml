@model IEnumerable<FamilyFinance.Models.Domain.Transfer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Name
        </th>
        <th>
            Amount
        </th>
        <th>
            Description
        </th>
        <th>
            Date
        </th>
        <th>
            Initiator
        </th>
        <th>
            Account
        </th>
        <th>
            ToAccount
        </th>
        <th>
            Category
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
        <td>
			@item.Name
        </td>
        <td>
			@String.Format("{0:F}", item.Amount)
        </td>
        <td>
			@item.Description
        </td>
        <td>
			@String.Format("{0:g}", item.Date)
        </td>
        <td>
			@(item.Initiator == null ? "None" : item.Initiator.Name)
        </td>
        <td>
			@(item.Account == null ? "None" : item.Account.Name)
        </td>
        <td>
			@(item.ToAccount == null ? "None" : item.ToAccount.Name)
        </td>
        <td>
			@(item.Category == null ? "None" : item.Category.Name)
        </td>
    </tr>
}

</table>


