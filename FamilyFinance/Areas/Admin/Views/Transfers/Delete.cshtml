@model FamilyFinance.Areas.Admin.Models.Finance.Transfer

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Transfer</legend>

    <div class="display-label">Name</div>
    <div class="display-field">@Model.Name</div>

    <div class="display-label">Amount</div>
    <div class="display-field">@String.Format("{0:F}", Model.Amount)</div>

    <div class="display-label">FromAccount</div>
    <div class="display-field">@(Model.FromAccount == null ? "None" : Model.FromAccount.Name)</div>

    <div class="display-label">ToAccount</div>
    <div class="display-field">@(Model.ToAccount == null ? "None" : Model.ToAccount.Name)</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


