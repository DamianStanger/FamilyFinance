@model FamilyFinance.Models.Domain.Account

@* This partial view defines form fields that will appear when creating and editing entities *@

<div class="editor-label">
    @Html.LabelFor(model => model.Name)
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.Name)
    @Html.ValidationMessageFor(model => model.Name)
</div>

<div class="editor-label">
    @Html.LabelFor(model => model.Bank)
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.Bank)
    @Html.ValidationMessageFor(model => model.Bank)
</div>

<div class="editor-label">
    Owner
</div>
<div class="editor-field">
    @Html.DropDownListFor(model => model.OwnerId, ((IEnumerable<FamilyFinance.Models.Domain.Person>)ViewBag.PossibleOwners).Select(option => new SelectListItem {
        Text = (option == null ? "None" : option.Name), 
        Value = option.Id.ToString(),
        Selected = (Model != null) && (option.Id == Model.OwnerId)
    }), "Choose...")
    @Html.ValidationMessageFor(model => model.OwnerId)
</div>
<div class="editor-label">
    AccountType
</div>
<div class="editor-field">
    @Html.DropDownListFor(model => model.AccountTypeId, ((IEnumerable<FamilyFinance.Models.Domain.AccountType>)ViewBag.PossibleAccountTypes).Select(option => new SelectListItem {
        Text = (option == null ? "None" : option.Name), 
        Value = option.Id.ToString(),
        Selected = (Model != null) && (option.Id == Model.AccountTypeId)
    }), "Choose...")
    @Html.ValidationMessageFor(model => model.AccountTypeId)
</div>
