@model FamilyFinance.Controllers.StatementsViewModel

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Avaliable Statements for @Model.AccountName</h2>
@foreach (var statement in Model.Statements)
{
    <p>@Html.ActionLink(statement.StatementDate, "Statement", "Statements", new {accountId=statement.AccountId, Year=statement.Date.Year, Month=statement.Date.Month}, null) - £@statement.Amount</p>
}