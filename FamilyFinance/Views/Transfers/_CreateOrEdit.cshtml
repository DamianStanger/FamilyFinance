@model FamilyFinance.Models.Finance.Transfer

@* This partial view defines form fields that will appear when creating and editing entities *@

<div class="editor-label">
    @Html.LabelFor(model => model.Name)
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.Name)
    @Html.ValidationMessageFor(model => model.Name)
</div>

<div class="editor-label">
    @Html.LabelFor(model => model.Amount)
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.Amount)
    @Html.ValidationMessageFor(model => model.Amount)
</div>

<div class="editor-label">
    FromAccount
</div>
<div class="editor-field">
    @Html.DropDownListFor(model => model.FromAccountId, ((IEnumerable<FamilyFinance.Models.Finance.Account>)ViewBag.PossibleFromAccounts).Select(option => new SelectListItem {
        Text = (option == null ? "None" : option.Name), 
        Value = option.Id.ToString(),
        Selected = (Model != null) && (option.Id == Model.FromAccountId)
    }), "Choose...")
    @Html.ValidationMessageFor(model => model.FromAccountId)
</div>
<div class="editor-label">
    ToAccount
</div>
<div class="editor-field">
    @Html.DropDownListFor(model => model.ToAccountId, ((IEnumerable<FamilyFinance.Models.Finance.Account>)ViewBag.PossibleToAccounts).Select(option => new SelectListItem {
        Text = (option == null ? "None" : option.Name), 
        Value = option.Id.ToString(),
        Selected = (Model != null) && (option.Id == Model.ToAccountId)
    }), "Choose...")
    @Html.ValidationMessageFor(model => model.ToAccountId)
</div>
